<h1>
  List of all directors
</h1>

<hr>

<form action="/directors/create_director" method="post">
  <div>
    <label for="form_name">
      Name
    </label>

    <input id="form_name" name="form_name">
  </div>

   <div>
    <label for="form_dob">
      Dob
    </label>

    <input type="date" id="form_dob" name="form_dob">
  </div>

  <div>
    <label for="form_bio">
      Bio
    </label>

    <textarea id="form_bio" name="form_bio" row="3"></textarea>
  </div>

    <div>
    <label for="form_image">
      Image
    </label>

    <input id="form_image" name="form_image">
  </div>

  <button>Create director</button>

</form>  

<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_directors.order({:dob => :desc}).each do |director| %>
  <tr>
    <td>
      <%= director.id %>
    </td>

    <td>
      <img src="<%= director.image %>" style="width:250px;">
    </td>

    <td>
      <%= director.name %>
    </td>

    <td>
      <%= director.dob %>
    </td>

    <td>
      <a href="/directors/<%= director.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
